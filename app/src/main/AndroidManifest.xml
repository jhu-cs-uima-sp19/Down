<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.down">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logosquare"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logocircle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".FriendProfileActivity" />
        <activity
            android:name=".DownStatusActivity"
            android:label="@string/title_down_status"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GroupClickedActivity"
            android:label="@string/title_activity_group"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateGroupActivity"
            android:label="@string/title_activity_create_group"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PersonalUserProfile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateDownActivity"
            android:label="@string/title_add_down"
            android:parentActivityName=".AddDownActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddFriendActivity"
            android:label="@string/title_activity_add_friend"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddDownActivity"
            android:label="@string/title_add_down"
            android:parentActivityName=".MyFeedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MyFeedActivity"
            android:label="@string/title_activity_my_feed"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".WelcomeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".WelcomeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TutorialActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme">
        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>